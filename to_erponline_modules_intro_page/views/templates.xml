<odoo>
	<template id="modules_intro" name="Modules">
		<t t-call="website.layout">
			<div class="container">
				<h3 class="text-center mt-4 mb-4">Modules</h3>
				<div class="row">
					<t t-foreach="module_pages" t-as="module_page">
						<div class="col-12 col-lg-6 mt-4">
							<h5>
								<a t-att-href="module_page.url"><t t-esc="module_page.name" /></a>
							</h5>
							<p>
								<t t-esc="module_page.view_id.website_meta_description" />
							</p>
						</div>
					</t>
				</div>

				<nav>
					<ul class="pagination">
						<li t-if="page > 1" class="page-item">
							<a class="page-link" t-attf-href="/intro/modules?page={{page - 1}}">Prev</a>
						</li>
						<li t-if="number_of_pages > page" class="page-item">
							<a class="page-link" t-attf-href="/intro/modules?page={{page + 1}}">Next</a>
						</li>
					</ul>
				</nav>
			</div>
		</t>
	</template>
</odoo>