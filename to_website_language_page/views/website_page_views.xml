<odoo>
    <record id="website_pages_form_view_inherit" model="ir.ui.view">
        <field name="name">website.page.form</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_form_view"/>
        <field name="arch" type="xml">
            <field name="date_publish" position="after">
                <field name="language_id"/>
            </field>
            <field name="menu_ids" position="after">
           		<label for="other_language_page_ids" string="Other Language Pages"/>
             	<field name="other_language_page_ids"/>
            </field>
        </field>
    </record>

    <record id="website_pages_tree_view_inherit" model="ir.ui.view">
        <field name="name">website.page.list</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_tree_view"/>
        <field name="arch" type="xml">
            <field name="website_id" position="after">
                <field name="language_id"/>
            </field>
        </field>
    </record>
</odoo>