<odoo>
    <record id="joomla_user_list" model="ir.ui.view">
        <field name="name">joomla.user.list</field>
        <field name="model">joomla.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="username"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="joomla_user_form" model="ir.ui.view">
        <field name="name">joomla.user.form</field>
        <field name="model">joomla.user</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" readonly="1"/>
                    <field name="username" readonly="1"/>
                    <field name="email" readonly="1"/>
                </group>
                <footer>
                </footer>
            </form>
        </field>
    </record>

    <record id="joomla_category_list" model="ir.ui.view">
        <field name="name">joomla.category.list</field>
        <field name="model">joomla.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <record id="joomla_category_form" model="ir.ui.view">
        <field name="name">joomla.category.list</field>
        <field name="model">joomla.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" readonly="1"/>
                    <field name="parent_id" readonly="1"/>
                </group>
                <footer>
                </footer>
            </form>
        </field>
    </record>
</odoo>