<odoo>
    <record id="website_page_form_inherit" model="ir.ui.view">
        <field name="name">website.page.form.inherit</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_form_view"/>
        <field name="arch" type="xml">
            <field name="date_publish" position="after">
                <field name="language_id"/>
            </field>
        </field>
    </record>

    <record id="website_page_list_inherit" model="ir.ui.view">
        <field name="name">website.page.list.inherit</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_tree_view"/>
        <field name="arch" type="xml">
            <field name="website_published" position="after">
                <field name="language_id"/>
            </field>
        </field>
    </record>

    <record id="blog_post_form_inherit" model="ir.ui.view">
        <field name="name">blog.post.form.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <field name="subtitle" position="after">
                <field name="language_id"/>
            </field>
        </field>
    </record>

    <record id="blog_post_list_inherit" model="ir.ui.view">
        <field name="name">blog.post.list.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_list"/>
        <field name="arch" type="xml">
            <field name="visits" position="after">
                <field name="language_id"/>
            </field>
        </field>
    </record>
</odoo>