<odoo>
    <record id="migration_form_inherit" model="ir.ui.view">
        <field name="name">migration.form.inherit</field>
        <field name="model">joomla.migration</field>
        <field name="inherit_id" ref="to_joomla_migration.migration_form"/>
        <field name="arch" type="xml">
            <field name="include_easydiscuss" position="after">
				<field name="include_erpmanager" string="ERPManager"/>
            </field>
        </field>
    </record>

    <record id="user_map_search" model="ir.ui.view">
        <field name="name">joomla.migration.user.map.search.inherit.erpmanager</field>
        <field name="model">joomla.migration.user.map</field>
        <field name="inherit_id" ref="to_joomla_migration.user_map_search"/>
        <field name="arch" type="xml">
            <search>
                <filter string="Customer" name="is_customer" domain="[('is_customer', '=', True)]"/>
            </search>
        </field>
    </record>
</odoo>