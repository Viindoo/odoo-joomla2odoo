<odoo>
    <record id="migration_form" model="ir.ui.view">
        <field name="name">migration.form</field>
        <field name="model">bootstrap.migration</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="from_version"/>
                    <field name="to_version"/>
                </group>
                <footer>
                    <button string="Run" name="run" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="open_bootstrap_migration_wizard" model="ir.actions.act_window">
        <field name="name">Bootstrap Migration</field>
        <field name="res_model">bootstrap.migration</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="bootstrap_migration_menu"
              name="Bootstrap Migration"
              action="open_bootstrap_migration_wizard"
              parent="base.menu_administration"
              sequence="1000"/>
</odoo>