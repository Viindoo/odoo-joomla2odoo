<odoo>
	<record id="website_tree_view_inherit" model="ir.ui.view">
		<field name="name">website.tree.view.inherit</field>
		<field name="model">website</field>
		<field name="inherit_id" ref="website.view_website_tree" />
		<field name="arch" type="xml">
			<field name="name" position="after">
				<field name="domain" />
			</field>
		</field>
	</record>

	<record id="open_website_management_view"
		model="ir.actions.act_window">
		<field name="name">Websites</field>
		<field name="res_model">website</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_website_management" name="Websites"
		action="open_website_management_view"
		parent="website.menu_website_global_configuration" sequence="15" />
</odoo>